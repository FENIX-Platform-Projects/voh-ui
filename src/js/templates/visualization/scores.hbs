<!-- Section switcher-->
<div class="row">
    <div class="col-xs-12">
        <ul class="voh-section-switcher">
            <li class="active"><a href="#visualization/scores"> {{ section_scores }}</a></li>
            <li><a href="#visualization/table">{{ section_table }}</a></li>
        </ul>
    </div>
</div>

<!-- Selectors -->
<div class="row voh-visualization-selector">
    <!-- Map Container-->
    <div class="col-xs-8 voh-map-cont">
      <div class="row">
                <div class="col-xs-12">
                      <h1> {{ map_selector_title }}</h1>
                 </div>
            </div>
        <div class="row">
            <div class="col-xs-12">
                <!-- Geo selector granularity-->
                <div>
                    <form id="geo-granularity-form" class="geo-granularity-form" action="" onsubmit="return(false);">
                        <input id="geo-as-country" type="radio" name="geo-granularity" value="country">
                        <label for="geo-as-country"> {{ geo_granularity_country }}</label>
                        <input id="geo-as-region" type="radio" name="geo-granularity" value="region">
                        <label for="geo-as-region">{{ geo_granularity_region }}</label>
                    </form>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="geo-selector-container">
                    <div id="geo-selector"> </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Other selectors Container-->
    <div class="col-xs-4 voh-other-sel">
        <h1> {{ other_selectors_title }}</h1>

        <!-- FI status selectors-->
        <div>
            <form id="scores-fi-form" action="" onsubmit="return(false);">
                <input id="radio-severe-status" type="radio" name="status" value="s">
                <label for="radio-severe-status"> {{ fi_status_severe }}</label>
                <input id="radio-moderate-severe-status" type="radio" name="status" value="ms">
                <label for="radio-moderate-severe-status">{{ fi_status_moderate_severe }}</label>
            </form>
        </div>

        <!-- Variables selectors-->
        <div class="voh-other-var">
            <h4> {{ variables_title }} </h4>
            <form id="scores-variables-form" action="" onsubmit="return(false);">
                <input id="scores-age-sel" type="checkbox" name="variable" value="age">
                <label for="scores-age-sel"> {{ var_age }}</label><br>
                <input id="scores-location-sel" type="checkbox" name="variable" value="location">
                <label for="scores-location-sel"> {{ var_location }}</label><br>
                <input id="scores-education-sel" type="checkbox" name="variable" value="education">
                <label for="scores-education-sel"> {{ var_education }}</label><br>
                <input id="scores-gender-sel" type="checkbox" name="variable" value="gender">
                <label for="scores-gender-sel"> {{ var_gender }}</label><br>
                <input id="scores-marital-sel" type="checkbox" name="variable" value="marital">
                <label for="scores-marital-sel"> {{ var_marital_status }}</label><br>
                <input id="scores-income-sel" type="checkbox" name="variable" value="income">
                <label for="scores-income-sel"> {{ var_income }}</label><br>
            </form>
        </div>

        <!-- Total selectors-->
        <div>
            <input id="checkbox-show-total" type="checkbox" name="total" value="population">
            <label for="checkbox-show-total">{{ checkbox_show_total }}</label>
        </div>

    </div>
</div>

<!-- Toolbar -->
<div class="row">
    <div class="col-xs-12 voh-vis-buttons-holder">
        <button id="scores-go-btn" class="btn btn-default pull-right" disabled> {{ go_btn }}</button>
        <button id="scores-reset-btn" class="btn btn-default pull-right" disabled> {{ reset_btn }}</button>
    </div>
</div>

<!-- Error Holder -->
<div class="row">
    <div class="col-xs-12">
        <div class="error-holder"></div>
    </div>
</div>

<!-- Courtesy Message Holder -->
<div class="row">
    <div class="col-xs-12">
        <div class="courtesy-message-holder"></div>
    </div>
</div>

<!-- Results container -->
<div class="row">
    <div class="col-xs-12">
        <div id="results-container">

        </div>
    </div>
</div>